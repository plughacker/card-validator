{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "lib": ["ESNext", "dom"],
    "alwaysStrict": true,
    "strict": true,
    "esModuleInterop": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
